@model List<String>
@{
	ViewBag.Title = "ViewStudentAccess";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Students who have access to this test</h2>

<table class="table">
	@ViewBag.Date
	@ViewBag.Time

	@if (Model == null || Model.Count <= 0) {
		<p>There are no student regestered for this test!</p>
	} else {
		foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item)
				</td>
				<td>
					@Html.ActionLink("Remove", "RemoveStudent", new { TestID = ViewBag.TestID, Username = item })
				</td>
			</tr>
		}
	}


</table>
