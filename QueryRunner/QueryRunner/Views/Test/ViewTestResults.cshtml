
@{
	ViewBag.Title = "ViewTestResults";
	Layout = "~/Views/Shared/_LayoutStudent.cshtml";
}

<md-content class="bodyMargin" layout="column">
	<md-content layout="row">
		<div layout="column">
			<md-list md-whiteframe="3" class="whiteBackground" layout-fit>
				<md-subheader class="md-primary md-hue-1">Questions</md-subheader>
				<md-list-item>
					<p>Question 1</p>
					<p>3/3</p>
					<md-checkbox ng-model="message1.selected"></md-checkbox>
					<md-tooltip md-direction="right">Flag this Question</md-tooltip>
				</md-list-item>
				<md-list-item>
					<p>Question 2</p>
					<p>2/2</p>
					<md-checkbox ng-model="message2.selected"></md-checkbox>
					<md-tooltip md-direction="right">Flag this Question</md-tooltip>
				</md-list-item>
				<md-list-item>
					<p>Question 3</p>
					<p>4/5</p>
					<md-checkbox ng-model="message3.selected"></md-checkbox>
					<md-tooltip md-direction="right">Flag this Question</md-tooltip>
				</md-list-item>
				<md-list-item>
					<p>Question 4</p>
					<p>5/5</p>
					<md-checkbox ng-model="message4.selected"></md-checkbox>
					<md-tooltip md-direction="right">Flag this Question</md-tooltip>
				</md-list-item>
				<md-list-item>
					<p>Question 5</p>
					<p>4/6</p>
					<md-checkbox ng-model="message5.selected"></md-checkbox>
					<md-tooltip md-direction="right">Flag this Question</md-tooltip>
				</md-list-item>
			</md-list>
			<md-content md-whiteframe="3" class="whiteBackground">
				<md-input-container layout="column">
					<label>Type your comments here if you have any problems!</label>
					<textarea rows="6" cols="50"></textarea>
				</md-input-container>
			</md-content>
		</div>

		<md-content>
			<md-card>
				<md-card-title>
					<md-card-title-text>
						<span class="md-title" id="qTitle">Question @Html.DisplayTextFor(cur => cur.QuestionNum)</span>
					</md-card-title-text>
				</md-card-title>

				<md-card-content>
					<p id="qQuestion">@Html.DisplayTextFor(cur => cur.QuestionText)</p>
					<p>Enter you answer HERE: </p>
					<div style="width:500px" ng-model="QuestionAnswer">@Html.TextAreaFor(cur => cur.QuestionAnswer, 7, 300, null)</div>
				</md-card-content>


				<md-card-actions layout="row" layout-align="start center">
					<md-button class="btnBlue">Paste</md-button>
					<span flex></span>
					<input class="btnBlue" type="submit" value="Submit" />
					<md-button class="btnBlue">Clear</md-button>

					<span flex></span>
					<md-button class="btnBlue">Export marks</md-button>
				</md-card-actions>
			</md-card>

		</md-content>
	</md-content>
</md-content>
