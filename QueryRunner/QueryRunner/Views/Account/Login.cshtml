<body ng-app="Screen" ng-cloak>
    <header>
        <md-toolbar layout="row" md-scroll-shrink>
            @{Html.RenderPartial("../Shared/Header");}
        </md-toolbar>
    </header>

    <div class="container body-content">
        @model QueryRunner.Models.LoginViewModel

        <main flex>
            <md-content class="md-padding">
                <div layout="row" layout-align="center center" layout-xs="column">
                    <md-card flex flex-gt-xs="30">
                        <h2 layout="row" layout-align="center center">Login</h2>
                        <md-card-content class="loginBackground">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @name = "loginForm" }))
                            {
                                @Html.AntiForgeryToken()

                                <md-input-container layout="column">
                                    <label>Username</label>
                                    <input id="username" name="username" ng-model="username" required type="text" />
                                    <div ng-messages="loginForm.username.$error" ng-show="loginForm.username.$dirty">
                                        <div ng-message="required">This is required!</div>
                                    </div>
                                </md-input-container>

                                <md-input-container layout="column">
                                    <label>Password</label>
                                    <input id="password" name="Password" ng-model="password" required type="password" />
                                    <div ng-messages="loginForm.password.$error" ng-show="loginForm.password.$dirty">
                                        <div ng-message="required">This is required!</div>
                                    </div>
                                </md-input-container>

                                <md-button-container layout="column">
                                    <md-button class="btnBlue" type="submit" value="Login">Login</md-button>
                                </md-button-container>
                            }
                        </md-card-content>
                    </md-card>
                </div>
            </md-content>
        </main>


